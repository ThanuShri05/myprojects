import java.util.Scanner;
class convert
{
	public static void main(String arg[])	
	{
	    double far,cel;
             	    Scanner sc=new Scanner(System.in);
	    System.out.println("Choose type of conversion \n 1.Fahrenheit to Celsius  2.Celsius to Fahrenheit");
                   int ch=sc.nextInt();
	    switch(ch)
	    {
	    case 1:  System.out.println("Enter  Fahrenheit temperature");
                   	  far=sc.nextDouble();
	    	  cel=(far-32)*5/9;
	    	  System.out.println("Celsius temperature is = "+cel);
		  break;
	    case 2:  System.out.println("Enter  Celsius temperature");                            
                   	  cel=sc.nextDouble();
	    	  far=((9*cel)/5)+32;
	    	  System.out.println("Fahrenheit temperature is = "+far);
		  break;
	   default:  System.out.println("please choose valid choice");
	   }  
	} 
}
